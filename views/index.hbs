<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- create restaurant button -->
<div class="container">
  <div class="container mt-4">
    <div class="col-md-12 text-center">
      <button type="button" class="btn btn-info" onclick="location.href='./new'">Creat New
        Restaurant</button>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">

        {{#each restaurants}}
        <div class="col">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-2">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" style="height: 9vw;">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
          </a>
          <div class="card-footer mb-3 text-end">
            <a href="./restaurants/{{ this._id }}/edit">edit</a>
            <a href="./restaurants/{{ this._id }}">detail</a>
            <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger">delete</button>
            </form>
          </div>

        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
</div>